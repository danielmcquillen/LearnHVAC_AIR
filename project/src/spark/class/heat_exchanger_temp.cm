/// \file heat_exchanger_T.cm
///
/// Qdot = cp * mdot * ( Tsu - Tex )
///

PORT Qdot  [W] ;
PORT cp    [J/(kg.K)] ;
PORT mdot  [kg/s] ;
PORT Tsu   [K] ;
PORT Tex   [K] ;

DECLARE cond    cond1;   // c = k * ( p1 - p2 )
DECLARE prod    prod1;   // c = a * b

LINK .Qdot,
     cond1.q;
LINK .cp
     prod1.a;
LINK .mdot,
     prod1.b;
LINK temp_cpmdot,  // cp * mdot
     prod1.c,
     cond1.U12;
LINK .Tsu,
     cond1.T1;
LINK .Tex, 
     cond1.T2;


