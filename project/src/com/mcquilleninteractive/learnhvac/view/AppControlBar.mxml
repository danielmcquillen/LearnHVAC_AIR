		<mx:TabBar 
			id="appTabBar"
			styleName="appTabBar"
			height="28"
		    itemClick="onTabClick(event)"
		    selectedIndex="0"
		    focusEnabled="false"
		   
			>
			<mx:dataProvider>       
				<mx:Object label="Short-term Sim."  
						icon="{BuildingIcon}"
						data="modelica"/>
				<mx:Object label="Long-term Sim." 
						icon="{SunIcon}"
						data="eplus"/>
   				<mx:Object label="Analysis"  
						icon="{ChartIcon}"
   						data="analysis"/>                    
			</mx:dataProvider>
		</mx:TabBar>
		
   			 
    </mx:HBox>
        		
            
	<mx:HBox width="200" 
		height="30"
