       					styleName="btnNavIcon"
       					toolTip="Settings" 
       					icon="{SettingsIcon}"
       					click="onSettings()"
       		/>
       			 	
       		<mx:Button id="btnInfo" 
       					width="35"
       					height="100%"
       					styleName="btnNavIcon"
       		   	 		toolTip="Open help files in your browser"
       					icon="{InfoIcon}"
       					click="onInformation()"
       		/>
       		
