	<!-- the FrontController, containing Commands specific to this appliation -->
	<control:LHController id="controller"/>

	<!-- layout -->
	
	<mx:Canvas id="appCanvas" 
		height="100%" 
		width="100%" 
		horizontalScrollPolicy="off" 
		verticalScrollPolicy="off">
	
		<view:Login 
			id="loginPanel"
			height="100%" width="100%"/>
			
		<mx:Canvas id="mainCanvas" 
			visible="false" 
			height="100%" width="100%"
			horizontalScrollPolicy="off"
		 	verticalScrollPolicy="off"
		    
			>
			<mx:VBox width="100%" height="100%" verticalGap="0">
				
			<view:AppControlBar id="appBarCanvas" width="100%" />	
			
			<mx:ViewStack width="100%" height="100%"
			  		paddingLeft="0" 
					paddingRight="0" 
					paddingBottom="0" 
					paddingTop="0" 
					resizeToContent="true" 
					selectedIndex="{model.viewing}"
				    historyManagementEnabled="false"
				    creationPolicy="all"
					>
				<scenario:SelectScenario id="pnlSelectScenario"/>
				<view:LongTermSimulation id="pnlSetup"/>
				<view:ShortTermSimulation id="pnlSim"/>
				<analysis:AnalysisPanel id="pnlAnalysis" />
